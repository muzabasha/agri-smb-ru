{
    "version": 2,
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/login",
            "destination": "/login.html"
        },
        {
            "source": "/admin-dashboard",
            "destination": "/admin-dashboard.html"
        },
        {
            "source": "/dashboard",
            "destination": "/dashboard.html"
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false
}